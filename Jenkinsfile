pipeline {
    agent {
        label 'xenial-jenkins-docker'
        image 'kiva:node6'
        // args '-p 8888:8888'
    }
    environment {
        CI = 'true'
    }
    stages {
        stage('Install') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh 'npm run test'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
    }
}
